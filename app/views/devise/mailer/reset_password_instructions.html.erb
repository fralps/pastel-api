<% if @resource.firstname == nil %>
  <h1>Hello <%= @resource.email %>&nbsp;!</h1>
<% else %>
  <h1>Hello <%= @resource.firstname %> <%= @resource.lastname %>&nbsp;!</h1>
<% end %>
<p>
  <%= t("devise.mailer.reset_password_instructions.instruction_1") %>
</p>
<p style="text-align: center; margin: 40px 0px;">
  <%= link_to \
    t("devise.mailer.reset_password_instructions.action"),
    front_url("reset-password?reset_password_token=#{@token}"),
    class: "button"
  %>
</p>
<p>
  <%= t("devise.mailer.reset_password_instructions.instruction_2") %>
</p>
<p>
  <%= t("devise.mailer.reset_password_instructions.instruction_3") %>
</p>
